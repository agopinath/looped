<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/sl_uname"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/sl_url"
        android:layout_marginTop="24dp"
        android:ems="12"
        android:hint="Username" />

    <EditText
        android:id="@+id/sl_password"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sl_uname"
        android:layout_alignRight="@+id/sl_uname"
        android:layout_below="@+id/sl_uname"
        android:ems="12"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/sl_prefix"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sl_password"
        android:layout_marginTop="32dp"
        android:ems="16"
        android:hint="SchoolLoop URL" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/sl_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="logIn"
        android:text="Log In" />

    <Button
        android:id="@+id/load_prefs_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sl_login_btn"
        android:layout_alignParentLeft="true"
        android:onClick="loadPreferences"
        android:text="Load Preferences" />

    <Button
        android:id="@+id/save_prefs_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/load_prefs_btn"
        android:layout_alignParentLeft="true"
        android:onClick="savePreferences"
        android:text="Save Preferences" />

</RelativeLayout>
