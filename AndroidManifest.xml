<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyanojay.looped"
    android:versionCode="8"
    android:versionName="0.51" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:allowBackup="true" >
        <service android:name=".net.KeepAliveService"></service>
        <activity
            android:name="com.cyanojay.looped.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".portal.PortalActivity"
            android:label="@string/title_activity_portal"
            android:theme="@style/Theme.Sherlock" />
        <activity
            android:name="com.cyanojay.looped.portal.GradesFragment"
            android:label="@string/title_activity_grades" />
        <activity
            android:name="com.cyanojay.looped.portal.AssignmentsFragmnet"
            android:label="@string/title_activity_assignments" />
        <activity
            android:name="com.cyanojay.looped.portal.NewsFragment"
            android:label="@string/title_activity_news" />
        <activity
            android:name=".portal.GradeDetailsActivity"
            android:label="@string/title_activity_grade_details" />
        <activity
            android:name="com.cyanojay.looped.portal.LoopMailFragment"
            android:label="@string/title_activity_loop_mail" />
        <activity
            android:name=".portal.BaseActivity"
            android:label="@string/title_activity_loop_mail" />
        <activity
            android:name=".portal.BaseListActivity"
            android:label="@string/title_activity_loop_mail" />
        <activity android:name="org.achartengine.GraphicalActivity" />
    </application>

</manifest>