    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cyanojay.looped.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".portal.PortalActivity"
            android:label="@string/title_activity_portal" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".portal.GradesActivity" android:label="@string/title_activity_grades" />
        <activity android:name=".portal.AssignmentsActivity" android:label="@string/title_activity_assignments" />
        <activity android:name=".portal.NewsActivity" android:label="@string/title_activity_news" />
        
    </application>
</manifest>