<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyanojay.looped"
    android:versionCode="2"
    android:versionName="v0.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cyanojay.looped.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".portal.PortalActivity"
            android:label="@string/title_activity_portal" />
        <activity
            android:name=".portal.GradesActivity"
            android:label="@string/title_activity_grades" />
        <activity
            android:name=".portal.AssignmentsActivity"
            android:label="@string/title_activity_assignments" />
        <activity
            android:name=".portal.NewsActivity"
            android:label="@string/title_activity_news" />
        <activity
            android:name=".portal.GradeDetailsActivity"
            android:label="@string/title_activity_grade_details" />
        <activity
            android:name=".LoopMailActivity"
            android:label="@string/title_activity_loop_mail" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>